---
interface Props {
    link: string;
    active?: boolean;
}

const { link, active } = Astro.props;
---

<a
    class:list={[
        "px-1 relative transition duration-150",
        "after:content-[''] after:transition-all after:duration-150 after:ease-in-out",
        "after:absolute after:left-0 after:bottom-0 after:bg-primary-500 after:-z-10",
        "after:h-0 after:w-full hover:after:h-full",
        active && "text-primary-500 hover:text-white",
    ]}
    href={link}
>
    <slot />
</a>
